        android:onClick="onButtonLClick"
        android:text="V"
        app:layout_constraintStart_toEndOf="@+id/buttonD"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="@dimen/height_one_letter"
        android:layout_height="@dimen/widht_one_letter"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:onClick="onButtonLClick"
        android:text="D"
        app:layout_constraintStart_toEndOf="@+id/buttonB"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonI"
        android:layout_width="@dimen/height_one_letter"
        android:layout_height="@dimen/widht_one_letter"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:onClick="onButtonLClick"
        android:text="I"
        app:layout_constraintStart_toEndOf="@+id/listView_enigme_armoir"
        app:layout_constraintTop_toBottomOf="@+id/buttonA" />

    <Button
        android:id="@+id/buttonT"
        android:layout_width="@dimen/height_one_letter"
        android:layout_height="@dimen/widht_one_letter"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:onClick="onButtonLClick"
        android:text="T"
        app:layout_constraintStart_toEndOf="@+id/buttonI"
        app:layout_constraintTop_toBottomOf="@+id/buttonB" />

    <Button
        android:id="@+id/buttonO"
        android:layout_width="@dimen/height_one_letter"
        android:layout_height="@dimen/widht_one_letter"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"

        android:onClick="onButtonLClick"
        android:text="O"
        app:layout_constraintStart_toEndOf="@+id/listView_enigme_armoir"
        app:layout_constraintTop_toBottomOf="@+id/buttonI" />

    <Button
        android:id="@+id/buttonF"
        android:layout_width="@dimen/height_one_letter"
        android:layout_height="@dimen/widht_one_letter"
        android:layout_marginStart="104dp"
        android:layout_marginTop="36dp"
        android:onClick="onButtonLClick"
        android:text="F"
        app:layout_constraintStart_toEndOf="@+id/buttonO"
        app:layout_constraintTop_toBottomOf="@+id/buttonV" />

    <Button
        android:id="@+id/buttonX"
        android:layout_width="@dimen/height_one_letter"
        android:layout_height="@dimen/widht_one_letter"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:onClick="onButtonLClick"
        android:text="M"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/listView_enigme_armoir"
        app:layout_constraintTop_toBottomOf="@+id/buttonI"
        app:layout_constraintVertical_bias="0.241" />

    <Button
        android:id="@+id/buttonH"
        android:layout_width="@dimen/height_one_letter"
        android:layout_height="@dimen/widht_one_letter"
