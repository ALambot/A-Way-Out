<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dolphin.awayout.Enigme_Armoire">


    <Button
        android:id="@+id/buttonA"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:onClick="onButtonLClick"
        android:text="A"
        app:layout_constraintStart_toEndOf="@+id/listView_enigme_armoir"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="38dp"
        android:layout_height="@dimen/widht_one_letter"
        android:layout_marginStart="20dp"
        android:layout_marginTop="72dp"
        android:onClick="onButtonLClick"
        android:text="B"
        app:layout_constraintStart_toEndOf="@+id/buttonA"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="42dp"
        android:layout_height="@dimen/widht_one_letter"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:onClick="onButtonLClick"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/buttonV"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonV"
        android:layout_width="@dimen/height_one_letter"
        android:layout_height="@dimen/widht_one_letter"
