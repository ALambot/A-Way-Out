    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_player_menu</item>
        <item name="android:fontFamily">@font/fondamento</item>
        <item name="colorPrimaryDark">#251002</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textsize</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="buttonStyle">@style/MyAppThemebutton</item>
        <item name="android:popupKeyboard">@style/MyKeyBoardStyle</item>
    </style>


    <style name="MyKeyBoardStyle" parent="@android:style/Widget.KeyboardView">
        <item name="android:keyTextColor">#de19cd</item>
    </style>


    <style name="MyAppThemebutton" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">#66451c</item>
        <item name="android:textColor">#efd9be</item>
        <item name="android:textSize">@dimen/buttontesxtsize</item>
    </style>

    <style name="MyAppTheme.animation" parent="@android:style/Animation.Toast">
        <item name="android:fontFamily"></item>
    </style>

    <style name="MyAppTheme.Precious">
        <item name="android:fontFamily">@font/precious</item>
    </style>

    <style name="MyAppTheme.TitleStyle">
        <item name="android:fontFamily">@font/victorian</item>
        <item name="android:textSize">@dimen/smalltitlesize</item>
    </style>

    <style name="MyAppTheme.BigTitleStyle">
        <item name="android:fontFamily">@font/victorian</item>
        <item name="android:textSize">@dimen/bigtitlesize</item>
    </style>

