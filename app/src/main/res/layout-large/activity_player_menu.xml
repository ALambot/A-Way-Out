    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="293dp"
        android:layout_height="336dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onButtonQRClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319"
        app:srcCompat="@drawable/magnifying_button" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="231dp"
        android:layout_height="165dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onButtonInventoryMenuClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737"
        app:srcCompat="@drawable/inventory_button" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="283dp"
        android:layout_height="237dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="8dp"
        android:onClick="onButtonEnigmeListeClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.821"
        app:srcCompat="@drawable/enigma_button" />


    <Button
        android:id="@+id/buttonMenuInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:fontFamily="@font/victorian"
        android:onClick="onButtonInventoryMenuClick"
        android:text="@string/inventaire"
        android:textAllCaps="false"
        android:textColor="#72583f"
        android:textSize="@dimen/smalltitlesize"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/buttonMenuEnigme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="208dp"
        android:layout_marginLeft="40dp"
        android:background="@null"
        android:fontFamily="@font/victorian"
        android:onClick="onButtonEnigmeListeClick"
        android:text="@string/enigmes"
        android:textAllCaps="false"
        android:textColor="#72583f"
        android:textSize="@dimen/smalltitlesize"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7" />

    <Button
        android:id="@+id/buttonMenuQRcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:fontFamily="@font/victorian"
        android:onClick="onButtonQRClick"
        android:text="@string/qr_code"
        android:textAllCaps="false"
        android:textColor="#72583f"
        android:textSize="@dimen/smalltitlesize"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />


    <ImageView
        android:id="@+id/imageIndice"
        android:layout_width="105dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onButtonHintClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bulb" />

    <Button
        android:id="@+id/buttonMenuIndice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:background="@null"
        android:fontFamily="@font/victorian"
        android:onClick="onButtonHintClick"
        android:text="ÃŒndice"
        android:textAllCaps="false"
        android:textColor="#72583f"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/imageIndice"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageIndice"
        app:layout_constraintTop_toTopOf="@+id/imageIndice" />

</android.support.constraint.ConstraintLayout>